[module/powermenu]
type = custom/menu
expand-right = false
format-spacing = 1.5
label-open = 
label-open-foreground = #ff6f3c
label-close = CANCEL
label-close-foreground = #ff6f3c

menu-0-0 = reboot
menu-0-0-exec = systemctl reboot
menu-0-1 = power off
menu-0-1-exec = systemctl poweroff
menu-0-2 = suspend
menu-0-2-exec = systemctl suspend
menu-0-3 = logout
menu-0-3-exec = bspc quit

[module/pacman-updates]
